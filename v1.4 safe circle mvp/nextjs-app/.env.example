# ============================================
# SafeCircle Environment Variables (Next.js)
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id
STRIPE_PRICE_FULL_MONTHLY=price_full_monthly_id
STRIPE_PRICE_FULL_YEARLY=price_full_yearly_id

# Stripe Webhook Secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/safecircle

# ============================================
# ANALYTICS & TRACKING
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_CLARITY_PROJECT_ID=xxxxxxxxxx
NEXT_PUBLIC_HOTJAR_ID=0000000
NEXT_PUBLIC_HOTJAR_VERSION=6

# ============================================
# SUPABASE CONFIGURATION (OPTIONAL)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
RESEND_API_KEY=re_your_resend_api_key_here
CONTACT_EMAIL_TO=hello@safecircle.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# GOOGLE CALENDAR (optional)
# ============================================
NEXT_PUBLIC_GOOGLE_CALENDAR_BOOKING_URL=https://calendar.google.com/calendar/appointments/schedules/your-booking-link

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
SESSION_SECRET=your_session_secret_min_32_characters_long
