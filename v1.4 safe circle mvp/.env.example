# ============================================
# SafeCircle Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Price IDs (create these in Stripe Dashboard)
# Basic Plan
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id
# Full Plan
STRIPE_PRICE_FULL_MONTHLY=price_full_monthly_id
STRIPE_PRICE_FULL_YEARLY=price_full_yearly_id

# Stripe Webhook Secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Format: postgresql://username:password@host:port/database?options
# Example local: postgresql://safecircle:password@localhost:5432/safecircle
# Example Supabase: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://username:password@localhost:5432/safecircle

# ============================================
# ANALYTICS & TRACKING
# ============================================
# Google Analytics 4 - Get from: https://analytics.google.com
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity (optional) - Get from: https://clarity.microsoft.com
VITE_CLARITY_PROJECT_ID=xxxxxxxxxx

# Hotjar (optional) - Get from: https://insights.hotjar.com
VITE_HOTJAR_ID=0000000
VITE_HOTJAR_VERSION=6

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Resend API Key (for email) - Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Contact Form Recipient Email
CONTACT_EMAIL_TO=hello@safecircle.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Backend API URL (your server for tracking & payments)
VITE_API_URL=http://localhost:3001

# Frontend URL (for redirects, webhooks, etc.)
VITE_APP_URL=http://localhost:5173

# Environment (development, staging, production)
NODE_ENV=development

# ============================================
# GOOGLE CALENDAR (optional)
# ============================================
# Booking link for contact page
VITE_GOOGLE_CALENDAR_BOOKING_URL=https://calendar.google.com/calendar/appointments/schedules/your-booking-link

# ============================================
# SECURITY
# ============================================
# JWT Secret for session management (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long

# Session secret (generate a random string)
SESSION_SECRET=your_session_secret_min_32_characters_long

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
